<fieldset class="fieldset w-xs dark:bg-black bg-white border border-base-300 p-4 rounded-box" id="user-form">
  <%= form_with url: login_path do |f| %>

    <%= f.label :email, "メールアドレス", class: "fieldset-label" %>
    <%= f.text_field :email, class: "input" %>

    <%= f.label :password, "パスワード", class: "fieldset-label" %>
    <%= f.text_field :password, class: "input" %>

    <%= f.submit "ログイン", class: "btn btn-primary mt-4" %>
  <% end %>
</fieldset>