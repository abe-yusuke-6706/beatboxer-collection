<div class="font-bold text-white flex w-52 flex-col gap-4">
  <div class="skeleton h-32 w-full"><%= post.youtube_video %></div>
  <% if post.youtube_video.present? %>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= find_youtube_url(post.youtube_video) %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  <% end %>
  <div class="skeleton h-4 w-28"><%= post.title %></div>
  <div class="skeleton h-4 w-full"><%= post.body %></div>
  <div class="skeleton h-4 w-full"></div>
</div>