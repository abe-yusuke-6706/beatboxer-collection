<fieldset class="fieldset w-xs bg-base-200 border border-base-300 p-4 rounded-box" id="user-form">
  <%= form_with model:@post do |f| %>

    <%= f.label :title, "タイトル", class: "fieldset-label" %>
    <%= f.text_field :title, class: "input" %>

    <%= f.label :youtube_video, "YoutubeのURL", class: "fieldset-label" %>
    <%= f.text_field :youtube_video, class: "input" %>

    <%= f.label :body, "概要説明", class: "fieldset-label" %>
    <%= f.text_field :body, class: "input" %>

    <%= f.label :password_confirmation, "パスワード確認用", class: "fieldset-label" %>
    <%= f.text_field :password_confirmation, class: "input" %>

    <%= f.submit "送信", class: "btn btn-neutral mt-4" %>
  <% end %>
</fieldset>