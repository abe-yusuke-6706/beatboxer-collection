<header>
    <div class="navbar bg-neutral text-primary-content" style="height: 140px;">
        <!--ヘッダー左サイドのブロック-->
        <div class="navbar-start">
            <div class="dropdown">
                <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /> </svg>
                </div>
                <ul
                    tabindex="0"
                    class="menu menu-sm dropdown-content bg-white rounded-box z-1 mt-3 w-52 p-2 secondary text-black">
                    <% if current_user %>
                        <li><%= link_to "新規投稿", new_post_path %></li>
                        <li><%= link_to "プロフィール", profile_path %></li>
                        <li><%= link_to "ブックマーク", bookmarks_posts_path %></li>
                        <li><%= link_to "いいね一覧", likes_posts_path %></li>
                        <li><%= link_to "タグ一覧", tags_path %></li>
                        <li><%= link_to "ログアウト", logout_path, data: { turbo_method: :delete } %></li>
                    <% else %>
                        <li><%= link_to "ゲストログイン", guest_login_path, data: { turbo_method: :post } %></li>
                        <li><%= link_to "ユーザー登録", new_user_path %></li>
                        <li><%= link_to "ログイン", login_path %></li>
                    <% end %>
                </ul>
            </div>
        </div>

        <!--ヘッダーのセンターのブロック-->
        <div class="navbar-center">
                <%= link_to root_path do %>
                    <%= image_tag 'tittle.png', class: "w-75 h-auto md:w-90" %>
                <% end %>
        </div>

        <!--ヘッダーの右サイドのブロック-->
        <div class="navbar-end">
            <div class="hidden md:block">
                <% if current_user %>
                    <%= link_to "新規投稿", new_post_path, class: "btn btn-secondary btn-lg", style: "margin-right: 10px;"%>
                    <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete }, class: "btn btn-secondary btn-lg" %>
                <% else %>
                    <%= link_to "ユーザー登録", new_user_path, class: "btn btn-secondary btn-lg", style: "margin-right: 10px;"%>
                    <%= link_to "ログイン", login_path, class: "btn btn-secondary btn-lg"%>
                <% end %>
            </div>
        </div>
    </div>
</header>
