<fieldset class="fieldset">
  <%= form_with model:[@post,@comment], html: { class: "flex gap-6 items-end" } do |f| %>
    <%= f.text_field :body, class: "textarea text-base dark:text-white h-20 md:h-30 w-8/10 md:w-[500px] textarea-primary", :placeholder => "入力してください" %>
    <%= f.submit "投稿", class: "btn btn-base md:btn-lg btn-primary self-end" %>
  <% end %>
</fieldset>