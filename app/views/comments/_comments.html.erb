<% @comments.each do |comment| %>
    <div class="card bg-base-100 w-1/3 shadow-sm mb-2">
        <div class="card-body flex flex-row items-start gap-4">
            <div class="mr-1">
                <%= image_tag comment.user.avatar_url, class: "skeleton h-16 w-16 shrink-0 rounded-full" %>
            </div>
            <div class="flex flex-col gap-1 w-5/6">
                <h2 class="text-lg font-semibold" style="overflow-wrap: break-word;">
                    <%= comment.user.name %>
                </h2>
                <p class="text-sm text-gray-600" style="overflow-wrap: break-word;">
                    <%= comment.body %>
                </p>
            </div>
        </div>
    </div>
<% end %>
